<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.james.concurrency.mapper.BankAccountMapper">

    <update id="updateBalanceById">
        update `bank_account` set `balance` = #{balance} where id = #{id}
    </update>

    <select id="selectById" resultType="com.james.concurrency.dataobject.BankAccount">
        select * from `bank_account` where `id` = #{id}
    </select>
</mapper>